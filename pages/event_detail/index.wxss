/* pages/event_detail/index.wxss */
.event{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 15px;
}


.line{
    width: 100%;
    height: 0.5rpx;
    margin-top:28rpx;
    margin-bottom: 28rpx;
    background-color: #EEEEEE;
}

.inputBox textarea{
    padding: 5px 0px;
    width: 100%;
    height: 100px;
    margin-top: 5px;
    padding-bottom: 30px;
}

.inputBox{
    position: relative;
    border-bottom: 1px solid rgb(236, 236, 236);
    padding-bottom: 10px;
}
.inputBox .statistic{
    position: absolute;
    right: 0px;
    bottom: 10px;
    color: #999999;
}

.photo{
    position: relative;
    border-bottom: 1px solid rgb(236, 236, 236);
    padding-bottom: 10px;
    padding: 5px 0px;
    width: 100%;
    height: 150px;
    margin-top: 5px;
}

.photo .tip{
    position: absolute;
    right: 0px;
    color: #F72628 ;
}

.photo{
    position: relative;
    bottom: 10px;
    left: 0%;
}

.photo_img{
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.tel-container{
    display:flex;
    flex-direction:row;
    padding-top: 28rpx;
    padding-bottom: 28rpx;
    border-bottom: 1px solid rgb(236, 236, 236);
    font-size: 28rpx;
}

