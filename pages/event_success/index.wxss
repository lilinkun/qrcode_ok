/* pages/event_success/index.wxss */
.event_success{
    justify-items: center;
    align-items: center;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding-top: 100rpx;
}

.event_success_tip{
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #3AC707;
    line-height: 45rpx;
    margin-top: 32rpx;
}

.event_tip{
    font-size: 48rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: #FF4A0C;
    line-height: 67rpx;
    margin-top: 80rpx;
}

.tip_text,.tip_text1{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-weight: 400;
    color: #666666;
    line-height: 40rpx;
}

.tip_text{
    margin-top: 80rpx;
}

.tip_text1{
    margin-top: 20rpx;
}

.operation{
    margin-top: 120rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
}

.exit_event,.again_upload{
    flex: 1;display: flex;justify-content: center;
}

.exit_event{
    border-radius: 20rpx;
    border: 1rpx solid #C6C6C6;
    padding: 22rpx;
    margin-left: 32rpx;
    margin-right: 13rpx;
}


.tel_container{
    display: flex;
    flex: row;
    bottom: 0rpx;
    margin-top: 120rpx;
    margin-bottom: 32rpx;
}